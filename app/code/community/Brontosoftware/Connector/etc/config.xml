<?xml version="1.0"?>
<config>
  <modules>
    <Brontosoftware_Connector>
      <version>3.0.0</version>
    </Brontosoftware_Connector>
  </modules>
  <global>
    <blocks>
      <brontosoftware_connector>
        <class>Brontosoftware_Connector_Block</class>
      </brontosoftware_connector>
    </blocks>
    <helpers>
      <brontosoftware_connector>
        <class>Brontosoftware_Connector_Helper</class>
      </brontosoftware_connector>
    </helpers>
    <models>
      <brontosoftware_connector>
        <class>Brontosoftware_Connector_Model</class>
        <resourceModel>brontosoftware_connector_mysql4</resourceModel>
      </brontosoftware_connector>
      <brontosoftware_connector_mysql4>
        <class>Brontosoftware_Connector_Model_Mysql4</class>
        <entities>
          <registration>
            <table>brontosoftware_connector_registration</table>
          </registration>
          <queue>
            <table>brontosoftware_connector_event_queue</table>
          </queue>
        </entities>
      </brontosoftware_connector_mysql4>
    </models>
    <resources>
      <brontosoftware_connector_setup>
        <setup>
          <module>Brontosoftware_Connector</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </brontosoftware_connector_setup>
      <brontosoftware_connector_write>
        <connection>
          <use>core_write</use>
        </connection>
      </brontosoftware_connector_write>
      <brontosoftware_connector_read>
        <connection>
          <use>core_read</use>
        </connection>
      </brontosoftware_connector_read>
    </resources>
    <events>
      <brontosoftware_connector_script_advanced_event>
        <observers>
          <brontosoftware_connector_script_advanced_event_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>processEvents</method>
          </brontosoftware_connector_script_advanced_event_handle>
        </observers>
      </brontosoftware_connector_script_advanced_event>
      <brontosoftware_connector_gather_endpoints>
        <observers>
          <brontosoftware_connector_gather_endpoints_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>gatherEndpoints</method>
          </brontosoftware_connector_gather_endpoints_handle>
        </observers>
      </brontosoftware_connector_gather_endpoints>
      <brontosoftware_connector_advanced_endpoint>
        <observers>
          <brontosoftware_connector_advanced_endpoint_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>endpointInfo</method>
          </brontosoftware_connector_advanced_endpoint_handle>
        </observers>
      </brontosoftware_connector_advanced_endpoint>
      <brontosoftware_connector_script_advanced_test>
        <observers>
          <brontosoftware_connector_script_advanced_test_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>processTest</method>
          </brontosoftware_connector_script_advanced_test_handle>
        </observers>
      </brontosoftware_connector_script_advanced_test>
      <brontosoftware_connector_script_settings_test>
        <observers>
          <brontosoftware_connector_script_settings_test_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>previewSettings</method>
          </brontosoftware_connector_script_settings_test_handle>
        </observers>
      </brontosoftware_connector_script_settings_test>
      <brontosoftware_connector_script_advanced_historical>
        <observers>
          <brontosoftware_connector_script_advanced_historical_handle>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>processHistorical</method>
          </brontosoftware_connector_script_advanced_historical_handle>
        </observers>
      </brontosoftware_connector_script_advanced_historical>
      <brontosoftware_connector_trigger_flush>
        <observers>
          <brontosoftware_advanced_flush_connector_events>
            <type>singleton</type>
            <class>brontosoftware_connector/observer</class>
            <method>triggerFlush</method>
          </brontosoftware_advanced_flush_connector_events>
        </observers>
      </brontosoftware_connector_trigger_flush>
    </events>
  </global>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <brontosoftware_connector before="Mage_Adminhtml">Brontosoftware_Connector_Adminhtml</brontosoftware_connector>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <layout>
      <updates>
        <brontosoftware_connector>
          <file>brontosoftware/connector.xml</file>
        </brontosoftware_connector>
      </updates>
    </layout>
  </adminhtml>
  <frontend>
    <routers>
      <brontosoftware_connector>
        <use>standard</use>
        <args>
          <module>Brontosoftware_Connector</module>
          <frontName>brontosoftware</frontName>
        </args>
      </brontosoftware_connector>
    </routers>
    <layout>
      <updates>
        <brontosoftware_connector>
          <file>brontosoftware/connector.xml</file>
        </brontosoftware_connector>
      </updates>
    </layout>
  </frontend>
  <phpunit>
    <suite>
      <modules>
        <Brontosoftware_Connector/>
      </modules>
    </suite>
  </phpunit>
</config>
