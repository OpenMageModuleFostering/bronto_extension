<?xml version="1.0"?>
<config>
  <modules>
    <Brontosoftware_Contact>
      <version>3.0.0</version>
    </Brontosoftware_Contact>
  </modules>
  <global>
    <helpers>
      <brontosoftware_contact>
        <class>Brontosoftware_Contact_Helper</class>
      </brontosoftware_contact>
    </helpers>
    <models>
      <brontosoftware_contact>
        <class>Brontosoftware_Contact_Model</class>
      </brontosoftware_contact>
    </models>
    <resources>
      <brontosoftware_contact_setup>
        <setup>
          <module>Brontosoftware_Contact</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </brontosoftware_contact_setup>
      <brontosoftware_contact_write>
        <connection>
          <use>core_write</use>
        </connection>
      </brontosoftware_contact_write>
      <brontosoftware_contact_read>
        <connection>
          <use>core_read</use>
        </connection>
      </brontosoftware_contact_read>
    </resources>
    <events>
      <brontosoftware_connector_queue_contact_transform>
        <observers>
          <brontosoftware_connector_queue_contact_transform_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>transformEvent</method>
          </brontosoftware_connector_queue_contact_transform_handle>
        </observers>
      </brontosoftware_connector_queue_contact_transform>
      <customer_register_success>
        <observers>
          <brontosoftware_contact_customer_register_success_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>pushChanges</method>
          </brontosoftware_contact_customer_register_success_handle>
        </observers>
      </customer_register_success>
      <customer_save_after>
        <observers>
          <brontosoftware_contact_customer_save_after_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>pushChanges</method>
          </brontosoftware_contact_customer_save_after_handle>
        </observers>
      </customer_save_after>
      <sales_model_service_quote_submit_success>
        <observers>
          <brontosoftware_contact_guest_save_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>updateGuestInfo</method>
          </brontosoftware_contact_guest_save_handle>
        </observers>
      </sales_model_service_quote_submit_success>
      <brontosoftware_connector_gather_endpoints>
        <observers>
          <brontosoftware_contact_gather_endpoints_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>gatherEndpoints</method>
          </brontosoftware_contact_gather_endpoints_handle>
        </observers>
      </brontosoftware_connector_gather_endpoints>
      <brontosoftware_connector_contact_endpoint>
        <observers>
          <brontosoftware_connector_contact_endpoint_handle>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>endpointInfo</method>
          </brontosoftware_connector_contact_endpoint_handle>
        </observers>
      </brontosoftware_connector_contact_endpoint>
      <brontosoftware_connector_advanced_endpoint_additional>
        <observers>
          <brontosoftware_connector_contact_advanced>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>advancedAdditional</method>
          </brontosoftware_connector_contact_advanced>
        </observers>
      </brontosoftware_connector_advanced_endpoint_additional>
      <brontosoftware_connector_script_contact_test>
        <observers>
          <brontosoftware_contact_script_test>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>testImport</method>
          </brontosoftware_contact_script_test>
        </observers>
      </brontosoftware_connector_script_contact_test>
      <brontosoftware_connector_script_contact_historical>
        <observers>
          <brontosoftware_contact_script_historical>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>historicalImport</method>
          </brontosoftware_contact_script_historical>
        </observers>
      </brontosoftware_connector_script_contact_historical>
      <controller_action_predispatch_customer_account_editPost>
        <observers>
          <brontosoftware_contact_update_email>
            <type>singleton</type>
            <class>brontosoftware_contact/observer</class>
            <method>updateEmailRequest</method>
          </brontosoftware_contact_update_email>
        </observers>
      </controller_action_predispatch_customer_account_editPost>
    </events>
  </global>
</config>
